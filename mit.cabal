cabal-version: 3.0
name: mit
version: 0

common component
  build-depends: base
  default-extensions:
    BlockArguments
    FlexibleInstances
    GADTs
    LambdaCase
    ImportQualifiedPost
    OverloadedStrings
    ScopedTypeVariables
    ViewPatterns
  default-language: Haskell2010
  ghc-options: -Wall

executable mit
  import: component
  build-depends:
    bytestring,
    process,
    text,
  ghc-options:
    -O -threaded
  main-is: Main.hs
